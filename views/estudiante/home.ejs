                            <img class="u-image-circle u-image-1" src="/images/Perfil/<%=user.imagen_perfil%>" alt="">
                        </div>
                        <p class="u-text u-text-1">
                            <%=user.nombre%>
                        </p>
                        <p class="u-text u-text-2">
                            <%=user.correo%>
                        </p>
                        <p class="u-text u-text-palette-5-dark-1 u-text-3">Tus cursos</p>
