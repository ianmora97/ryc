                                            onclick="like('<%=opinion.id_opinion%>')">
                                            <i class="far fa-thumbs-up"></i> <span id="likes_<%=opinion.id_opinion%>">
                                                <%=opinion.likesCount%>
                                            </span>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-secondary dislikes btn-xss"
                                            onclick="dislike('<%=opinion.id_opinion%>')">
                                            <i class="far fa-thumbs-down"></i><span
                                                id="dislikes_<%=opinion.id_opinion%>">
                                                <%=opinion.dislikesCount%>
                                            </span>
                                        </button>
                                    </div>
