                                            data-bs-target="#comentarioModal">
                                            <i class="fas fa-comment-dots"></i> <span
                                                id="cant_comment_<%=opinion.id_opinion%>">
                                                <%=opinion.cant_comentarios%>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </div>
